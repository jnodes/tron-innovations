{
  "name": "tron-innovation-suite",
  "version": "1.0.0",
  "description": "Next-generation development tools for the TRON blockchain",
  "private": true,
  "workspaces": [
    "tron-ai-swarm",
    "tron-vibe-platform"
  ],
  "scripts": {
    "install": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "security:check": "npm audit --workspaces && snyk test",
    "license:check": "license-checker --production --summary",
    "docs:generate": "typedoc --options typedoc.json",
    "docs:serve": "serve docs",
    "release": "changeset publish",
    "changeset": "changeset",
    "version": "changeset version",
    "clean": "rimraf node_modules **/node_modules **/dist **/build",
    "contracts:compile": "cd tron-ai-swarm && npm run contracts:compile",
    "contracts:test": "cd tron-ai-swarm && npm run contracts:test",
    "contracts:deploy": "cd tron-ai-swarm && npm run contracts:deploy",
    "contracts:verify": "cd tron-ai-swarm && npm run contracts:verify",
    "dev": "concurrently \"npm run dev -w tron-ai-swarm\" \"npm run dev -w tron-vibe-platform\"",
    "benchmark": "npm run benchmark --workspaces",
    "size:check": "size-limit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "size-limit": "^9.0.0",
    "snyk": "^1.1234.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jnodes/tron-innovations.git"
  },
  "keywords": [
    "tron",
    "blockchain",
    "dapp",
    "ai",
    "no-code",
    "smart-contracts",
    "web3"
  ],
  "author": "jnodes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jnodes/tron-innovations/issues"
  },
  "homepage": "https://github.com/jnodes/tron-innovations#readme",
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "tron-ai-swarm/dist/index.js",
      "limit": "100 KB"
    },
    {
      "path": "tron-vibe-platform/dist/bundle.js",
      "limit": "200 KB"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
